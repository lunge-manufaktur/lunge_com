  = link_to "/en/products/classic_run", class: "product-grid__item product-grid__item--classic-run" do
    .product-grid__text
      .product-grid__content
        h2 Classic Run
        span The proven choice for runners.
        ul.inline-list
          - data.products.classic_run.colors.each do |color|
            li.color-icon data-color=color.sku data-image-path=color.default_image
              .color-icon style="background: linear-gradient(180deg, #{color.first_color}, #{color.first_color} 65%, #{color.second_color} 66%, #{color.second_color} 100%); border: 1px solid #fff" title=(color.name)
    = image_tag "/images/products/classic_run/misc/classic_run_group01.jpg", alt: "Classic Run", class: "product-grid__image"

  = link_to "/en/products/classic_walk/", class: "product-grid__item product-grid__item--classic-walk" do
