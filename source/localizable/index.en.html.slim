  = link_to "/en/products/integer_walk_rebound/", class: "product-grid__item product-grid__item--integer-walk-rebound" do
    .product-grid__text
      .product-grid__content
        h2 = data.products.integer_walk_rebound.name
        p = data.products.integer_walk_rebound.short_description_en
        = partial "partials/color_options", locals: { product: "integer_walk_rebound" }
    = image_tag "/images/products/integer_walk_rebound/misc/integer_walk_rebound_02@3200px.jpg", srcset: "/images/products/integer_walk_rebound/misc/integer_walk_rebound_02@1600px.jpg 1600w, /images/products/integer_walk_rebound/misc/integer_walk_rebound_02@2400px.jpg 2400w, /images/products/integer_walk_rebound/misc/integer_walk_rebound_02@3200px.jpg 3200w", alt: "Integer Walk Cushion", class: "product-grid__image"
